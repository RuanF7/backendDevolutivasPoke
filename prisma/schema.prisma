datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Pessoa {
  id    Int    @id @default(autoincrement())
  email String @unique
  nome  String
  senha String
  tipo  String

  pokemon        Pokemon[]
  matricula      Matricula[]
  curso          Curso[]
  resposta       Resposta[]
  }

model Pokemon {
  id        Int    @id @default(autoincrement())
  professorId  Int
  nome      String
  golpe     String
  imagem    String
  pessoa    Pessoa @relation(fields: [professorId], references: [id])
}

model Curso {
  id          Int    @id @default(autoincrement())
  nome        String
  professorId    Int
  pessoa      Pessoa @relation(fields: [professorId], references: [id])

  prova       Prova []
  matricula   Matricula[]
}

model Matricula {
  alunoId  Int
  cursoId   Int

  pessoa    Pessoa @relation(fields: [alunoId], references: [id])
  curso     Curso @relation(fields: [cursoId], references: [id])

  @@id([alunoId, cursoId])
}

model Prova {
  id        Int    @id @default(autoincrement())
  nome      String
  cursoId   Int
  curso Curso @relation(fields: [cursoId], references: [id])

  questao Questao[]
}

model Questao {
  id        Int @id @default(autoincrement())  
  provaId   Int
  pergunta  String
  prova Prova @relation(fields: [provaId], references: [id])

  resposta Resposta[]
}

model Resposta {
  pessoaId  Int
  questaoId Int  
  resposta  String
  nota      Float

  pessoa    Pessoa @relation(fields: [pessoaId], references: [id])
  questao   Questao @relation(fields: [questaoId], references: [id])

  @@id([pessoaId, questaoId])
}
